{
  "manifest_version": 3,
  "name": "Chomper Ad-Blocker",
  "version": "1.0.0",
  "description": "Start / Stop ad blocking on demand.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}